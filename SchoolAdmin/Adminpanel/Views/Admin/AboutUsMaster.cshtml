
@{
    ViewBag.Title = "About Us Master";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}



@model IEnumerable<Adminpanel.Models.AboutUsDetails>
<div class="inner_content">
    <div class="inner_content_w3_agile_info two_in">
        <div class="forms-main_agileits">
            <div class="graph-form agile_info_shadow">
                <h3 class="w3_inner_tittle two">@ViewBag.AboutUsHeading </h3>
                <hr />
                <div class="form-body">
                    <form method="post" enctype="multipart/form-data" action="/Admin/AboutUsMaster">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">About Us Heading</label>
                                    <input type="hidden" name="Id" value='@ViewBag.Id' />
                                    <input type="text" style="min-height:45px !important" value='@ViewBag.txtAboutUsHeading' name="AboutUsHeading" class="form-control" id="txtAboutUsHeading" placeholder="About Us Heading">
                                </div>
                            </div>
                            @if (ViewBag.AboutUsFileName != "")
                            {
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">About Us Image</label>
                                        <input type="file" name="AboutUsFile" class="form-control" style="min-height:45px !important" id="AboutUsImage" />
                                        <img src='/Uploads/AboutUsImages/@ViewBag.AboutUsFilePath' style="height:100px;width:100px" />

                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">About Us Image</label>
                                        <input type="file" name="AboutUsFile" class="form-control" style="min-height:45px !important" id="AboutUsImage" />
                                    </div>
                                </div>
                            }
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Status</label>
                                    <select class="form-control" id="ddlStatus" name="Status" style="min-height:45px !important">
                                        <option value="0">--Select--</option>
                                        <option value="1">Active</option>
                                        <option value="2">In-Active</option>
                                    </select>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Descreption</label>
                                    <textarea class="form-control" cols="5" rows="3" id="AboutUsDescreption" name="Descreption" placeholder="Descreption">
                                   @ViewBag.txtAboutUsDescreption
                                </textarea>

                                </div>
                            </div>

                        </div>

                        <div class="row" style="text-align:center;margin-top:2%">
                            <button type="submit" class="btn btn-default">@ViewBag.btnText</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>

        <div class="agile-tables">
            <div class="w3l-table-info agile_info_shadow">
                <div class="row">
                    <table class="table table-responsive  table table-bordered  table table-striped">
                        <thead style="background: #e53238 !important;color:white">
                            <tr>
                                <th>Sr No</th>
                                <th>About Us Heading </th>
                                <th>About Us Descreption </th>
                                <th>About Us Image</th>
                                <th>Status</th>
                                <th>Added By</th>
                                <th>Added On</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int SNumber = 1;
                            }
                            @foreach (var items in Model)
                            {
                                <tr>
                                    <td>@SNumber</td>
                                    <td>@items.AboutUsHeading</td>
                                    <td>@items.AboutUsDescreption</td>
                                    <td><img src='/Uploads/AboutUsImages/@items.AboutUsPath' style="height:100px;width:100px" /></td>
                                    <td>@items.Status</td>
                                    <td>@items.AddedBy</td>
                                    <td>@items.AddedOn</td>
                                    <td><a href='@Url.Action("AboutUsMaster","Admin",new {id=items.Id})'><i class="fa fa-edit" style="color:green;font-size:17px"></i></a></td>
                                    <td><a href='@Url.Action("DeleteAboutUsMaster","Admin",new {id=items.Id})'><i class="fa fa-trash-o" style="color:red;font-size:17px"></i></a></td>
                                </tr>
                                SNumber++;
                            }

                        </tbody>
                    </table>


                </div>


            </div>
        </div>


    </div>
</div>

